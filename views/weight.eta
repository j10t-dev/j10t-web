<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Weight</title>
  <link rel="icon" href="/measure/icons/tape.ico" />
  <link rel="stylesheet" href="/public/charts.css" />
  <script src="https://cdn.jsdelivr.net/npm/vega@5"></script>
  <script src="https://cdn.jsdelivr.net/npm/vega-lite@5"></script>
  <script src="https://cdn.jsdelivr.net/npm/vega-embed@6"></script>
</head>
<body>
  <main>
    <h1>WEIGHT</h1>
    <div id="weight-chart"></div>
  </main>
  <script>
    async function loadWeightChart() {
      try {
        const response = await fetch('/api/weight');
        if (!response.ok) {
          throw new Error(`HTTP error! status: ${response.status}`);
        }
        const chartSpec = await response.json();
        await vegaEmbed('#weight-chart', chartSpec, {
          renderer: 'svg',
          actions: false,
          config: {
            autosize: {
              type: 'fit',
              contains: 'content'
            }
          }
        });
      } catch (error) {
        console.error('Failed to load weight chart:', error);
        document.getElementById('weight-chart').innerHTML = '<p>Failed to load weight chart</p>';
      }
    }
    
    document.addEventListener('DOMContentLoaded', loadWeightChart);
  </script>
</body>
</html>
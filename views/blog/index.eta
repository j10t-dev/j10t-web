<h1>Blog posts</h1>

<% if (it.posts.length === 0) { %>
    <p>No posts yet.</p>
<% } else { %>
    <ul class="post-list">
        <% it.posts.forEach(post => { %>
            <li class="post-item">
                <div class="post-date"><%= post.date %></div>
                <h2 class="post-title">
                    <a href="/blog/<%= post.slug %>"><%= post.title %></a>
                </h2>
            </li>
        <% }) %>
    </ul>
<% } %>